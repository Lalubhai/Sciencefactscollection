<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/background_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#3CB371"
        android:focusableInTouchMode="true">




        <ImageView android:id="@+id/favorite_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/heart_white"

            android:layout_alignParentRight="true"
            android:layout_marginEnd="10dp" />


        <TextView
            android:id="@+id/show_type_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="90dp"
            android:layout_marginStart="90dp"
            android:text="Science Topics"
            android:textColor="#fff"
            android:textSize="22sp"
            android:textStyle="bold" />



    </RelativeLayout>

    <RelativeLayout android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="90">
        <SearchView android:id="@+id/search_view"
            android:background="@drawable/search_draw"
            android:padding="2dp"
            android:focusable="true"

            android:focusableInTouchMode="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="6dp"
            android:layout_alignParentTop="true"
            android:iconifiedByDefault="false" />
        <ListView android:id="@+id/listView"
            android:background="#F5F5F5"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:divider="#F5F5F5"
            android:dividerHeight="8dp"
            android:layout_below="@+id/search_view" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/addlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1" >
    </LinearLayout>

</LinearLayout>
